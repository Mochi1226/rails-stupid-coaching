<div class="container">
  <h1>Stupid Coaching</h1>

  <%# display the question you asked %>
  <div class="card">
    <div class="card-body">
      <blockquote class="blockquote mb-0">
        <p><%= @question %></p>
        <footer class="blockquote-footer"><cite title="Source Title">You</cite></footer>
      </blockquote>
    </div>
  </div>

  <%# display the answer %>
  <div class="card">
    <div class="card-body">
      <blockquote class="blockquote mb-0">
        <p><%= @answer %></p>
        <footer class="blockquote-footer"><cite title="Source Title">Your coach</cite></footer>
      </blockquote>
    </div>
  </div>

  <%= link_to "Ask a new question", ask_path %>
</div>
